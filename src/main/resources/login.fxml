                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
              <Label fx:id="labelUsername" alignment="CENTER" style="&#10;" text="Username" textAlignment="CENTER" wrapText="false">
                <font>
                  <Font size="18.0" />
                </font>
              </Label>
                  <TextField fx:id="tfUsername" GridPane.columnIndex="1" />
                  <Label fx:id="labelPassword" text="Password" textAlignment="CENTER" GridPane.rowIndex="1">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="pfPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
